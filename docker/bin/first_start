#!/bin/bash

docker exec -it  php-fpm_project_name chmod -R 777 .

docker exec -it  php-fpm_project_name rm -rf var/view_preprocessed/ var/composer_home/cache/ var/cache/ var/page_cache/ pub/static/frontend/ pub/static/_cache generated/code
docker exec -it  php-fpm_project_name php bin/magento setup:upgrade
docker exec -it  php-fpm_project_name php bin/magento setup:di:compile
docker exec -it  php-fpm_project_name php bin/magento setup:static-content:deploy -f
docker exec -it  php-fpm_project_name chmod -R 777 var/ generated/ pub/static/
docker exec -it  php-fpm_project_name php bin/magento cache:flush
